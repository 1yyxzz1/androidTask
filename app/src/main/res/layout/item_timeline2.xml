<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <com.github.vipulasri.timelineview.TimelineView

        android:layout_marginLeft="30dp"
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:markerSize="40dp"
        app:lineWidth="5dp"
        app:startLineColor="@color/light_blue"
        app:endLineColor="@color/light_blue"
        app:lineStyle="dash"/>


    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_timeline_date"
            android:textSize="18sp"
            tools:text="24 JAN"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/text_timeline_desc"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="Order Successfully Completedasdoiadoiajdoaisdjoaidjaosdijasodiajsodajid"/>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>